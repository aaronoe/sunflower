<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="repo"
            type="com.google.samples.apps.sunflower.api.github.Repository" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:cardCornerRadius="4dp"
        app:cardElevation="@dimen/card_elevation"
        android:focusable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/user_photo"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                app:imageFromUrl="@{repo.owner.avatarUrl}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@color/cardview_dark_background" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@{repo.owner.login}"
                app:layout_constraintBottom_toBottomOf="@id/user_photo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/user_photo"
                app:layout_constraintTop_toTopOf="@id/user_photo"
                tools:text="aaronoe" />

            <TextView
                android:id="@+id/repo_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{repo.fullName}"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/user_photo"
                app:layout_constraintTop_toBottomOf="@id/user_photo"
                tools:text="sunflower" />

            <TextView
                android:id="@+id/repo_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{repo.description}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/repo_title"
                app:layout_constraintTop_toBottomOf="@id/repo_title"
                tools:text="A sample app for Android Jetpack libraries" />

            <TextView
                android:id="@+id/stargazer_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/ic_baseline_star_rate_24"
                android:drawablePadding="4dp"
                android:text="@{Integer.toString(repo.starCount)}"
                app:layout_constraintStart_toStartOf="@id/repo_description"
                app:layout_constraintTop_toBottomOf="@id/repo_description"
                tools:text="454" />

            <Button
                app:layout_constraintTop_toBottomOf="@id/stargazer_count"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="Star"
                app:icon="@drawable/ic_baseline_star_rate_24"
                app:iconGravity="textStart"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>