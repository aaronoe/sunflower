<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.google.samples.apps.sunflower.utilities.Resource" />

        <variable
            name="viewModel"
            type="com.google.samples.apps.sunflower.viewmodels.RepoDetailViewModel" />
    </data>

    <FrameLayout
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            isGone="@{!(viewModel.repoDetailData instanceof Resource.Loading)}"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center" />


        <androidx.constraintlayout.widget.ConstraintLayout
            isGone="@{(viewModel.repoDetailData instanceof Resource.Loading)}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            tools:visibility="visible">

            <TextView
                android:id="@+id/user_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{viewModel.result.owner.login}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="aaronoe" />

            <TextView
                android:id="@+id/repo_title"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{viewModel.result.fullName}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_login"
                tools:text="FlutterCinematic" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{viewModel.result.description}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/repo_title"
                tools:text="Flutter clone of my cinematic app" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</layout>